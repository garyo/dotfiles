[user]
	name = Gary Oberbrunner
	email = garyo@genarts.com
[pretty]
	twolines = tformat:%h %an, %cr: %d%n. . . . %s
[alias]
	ll = !git log -15 --all --graph --format=twolines  | cut -c1-100
	l = !git log --all --graph --format=twolines
	tube = log --graph --format=oneline --abbrev-commit --decorate --color
	tags = !git for-each-ref --sort=taggerdate --format '%(taggerdate:short)%09%(tag)' 'refs/tags'
	whatsnew = !/Python26/python.exe /bin2/git-whatsnew
	alias = !git config --get-regexp 'alias.*'
	ff = merge --ff-only @{u}
	outgoing = log @{u}..HEAD
	incoming = !git fetch && git log ..@{u}
	ga-merge = merge --no-commit --no-ff --log=9999
[gui]
	recentrepo = C:/genarts/sapphire
	fontdiff = -family \"Droid Sans Mono Dotted\" -size 11 -weight normal -slant roman -underline 0 -overstrike 0
	warndetachedcommit = true
[push]
	default = tracking
[diff]
	renamelimit = 0
	renames = copies
	tool = kdiff3
	guitool = kdiff3
[merge]
	tool = kdiff3
[mergetool "kdiff3"]
	path = /Applications/kdiff3.app/Contents/MacOS/kdiff3
  trustExitCode = false
[difftool "kdiff3"]
	path = /Applications/kdiff3.app/Contents/MacOS/kdiff3
  trustExitCode = false
[core]
	editor = emacsclient -a emacs
	autocrlf = input
[difftool "Kaleidoscope"]
	cmd = ksdiff --partial-changeset --relative-path \"$MERGED\" -- \"$LOCAL\" \"$REMOTE\"
[difftool]
	prompt = false
[mergetool "Kaleidoscope"]
	cmd = ksdiff --merge --output \"$MERGED\" --base \"$BASE\" -- \"$LOCAL\" --snapshot \"$REMOTE\" --snapshot
	trustExitCode = true
[mergetool]
	prompt = false
